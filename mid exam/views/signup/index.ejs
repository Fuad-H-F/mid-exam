					<select name="type">
					  	<option value="admin">Admin		</option>
					  	<option value="moderator">Moderator	</option>
					</select>
				</td>
			</tr>
			<tr>
				<td></td>
				<td><input type="submit" name="submit" value="Register"></td>
			</tr>	
		</table>
	</form>
	
</body>
</html>